vars=Variables()
vars.Add(BoolVariable('release','Set to true to build a release version',False))

env=Environment(tools=[],variables=vars,TARGET_ARCH='x86')

targets=env.SConscript('src/sconscript',exports=['env'],variant_dir='build')
env.Clean(targets,'build')
installed=env.Install('.',targets)

env.Default([installed])
